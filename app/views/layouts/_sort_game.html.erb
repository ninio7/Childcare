<div class="form-inline d-block">
  <%= form_with url: link, local: true, method: :get do |f| %>
  <%= f.select :sort_games, [["新着順", "new"], ["古い順", "old"], ["いいね多い順", "lot_favorite"], ["いいね少ない順", "few_favorite"]], {}, class: "form-control col-md-6 col-6" %>
    <%= button_tag :type => "submit", :class =>"btn btn-outline-secondary" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>
<div class="form-inline d-block mt-2">
  <%= form_with url: search_tag_path ,local: true, method: :get do |f| %>
    <%= f.text_field :title ,class: "form-control col-4", size: "14x3",placeholder: "タイトル検索"%>
    <%= button_tag :type => "submit", :class =>"btn btn-outline-secondary" do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>