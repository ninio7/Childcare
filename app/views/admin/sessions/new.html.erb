<div class="container">
  <h2 class="border-bottom text-dark text-center col-md-3 mt-3">管理者ログイン</h2>
  <%= form_with(model: @admin, url: admin_session_path, local: true, class: 'needs-validation', html: {novalidate: true}) do |f| %>
  <div class="col g-3 needs-validation novalidate">
  <div class="form_group row mt-5 mb-4">
    <%= f.label :"メールアドレス", class: "col-md-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",autofocus: true, class: 'form-control col-md-6 ', required: true %>
    <div class="invalid-feedback row offset-3">
        メールアドレスを入力してください。
    </div>
  </div>

  <div class="form_group row">
    <%= f.label :"パスワード", class: "col-3" %>
    <%= f.password_field :password, autocomplete: "current-password",autofocus: true, class: 'form-control col-md-6', required: true %>
    <div class="invalid-feedback row offset-3">
      パスワードを入力してください。
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field row">
      <%= f.check_box :remember_me , class: "ml-3" %>
      <%= f.label :remember_me  , class: "ml-2 col-md-6" %>
    </div>
  <% end %>

  <div class="actions row mt-3">
    <%= f.submit "ログイン", class: "btn btn-secondary rounded-pill text-white col-md-3 offset-3 " %>
  </div>
<% end %>
<%= render "admin/shared/links" %>
</div>
</div>
