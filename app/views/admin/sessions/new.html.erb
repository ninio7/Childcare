<div class="container">
  <h2 class="text-dark text-center col-lg-3 col-md-5 mt-5">管理者ログイン</h2>
  <%= form_with(model: @admin, url: admin_session_path, local: true, class: 'needs-validation', html: {novalidate: true}) do |f| %>
  <div class="col g-3 needs-validation novalidate">
  <div class="form_group row mt-5 mb-4">
    <%= f.label :"メールアドレス", class: "col-md-4 col-lg-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",autofocus: true, class: 'form-control col-md-7 col-lg-6', required: true %>
    <div class="invalid-feedback row offset-1 offset-md-4 offset-lg-3">
        メールアドレスを入力してください。
    </div>
  </div>

  <div class="form_group row">
    <%= f.label :"パスワード", class: "col-md-4 col-lg-3" %>
    <%= f.password_field :password, autocomplete: "current-password",autofocus: true, class: 'form-control col-md-7 col-lg-6', required: true %>
    <div class="invalid-feedback row offset-1 offset-md-4 offset-lg-3">
      パスワードを入力してください。
    </div>
  </div>

  <div class="row mt-5">
    <%= f.submit "ログイン", class: "btn btn-gray rounded-pill text-white col-md-2 offset-lg-7 offset-md-9 offset-3 col-6" %>
  </div>
<% end %>
<%= render "admin/shared/links" %>
</div>
</div>
