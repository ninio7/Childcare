<div class="container">
  <h2 class="col-lg-8 mt-5 mb-3 text-center offset-lg-2 text-dark under"> <%= @group.name %> ヒヤリハット</h2>
  <%= link_to  new_admin_group_accident_path do %>
    <p class= "btn btn-yellow text-secondary offset-lg-2"><i class="fas fa-edit" aria-hidden="true"></i> ヒヤリハット作成</p>
  <% end %>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-9 mt-2">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="bg-green text-white">日時</th>
          </tr>
        </thead>
           <tbody>
          <% @accidents.each do |accident| %>
            <tr onclick='window.location="<%= admin_group_accident_path(@group.id,accident.id)  %>"' role="link">
              <td><%= (accident.started_on.strftime("%Y年%m月%d日(#{accident.week})")) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center mx-auto">
    <%= paginate @accidents %>
  </div>
</div>
