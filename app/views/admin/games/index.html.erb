<div class="container">
  <div class="row mt-5 offset-lg-1">
    <div class="col-lg-4">
      <h2 class="under text-center">遊び集<span>（全<%= @games_all_count %>件）</span></h2>
        <%= link_to new_admin_game_path do %>
        <p class="btn btn-yellow text-secondary mt-2"> <i class="fa fa-plus-circle" aria-hidden="true"></i> 新規登録</p>
      <% end %>
    </div>
    <div class="col mb-5">
      <%= render 'layouts/sort_game', link: games_path, sort_games: @sort_games%>
    </div>
  </div>
  <div class='row'>
    <div class='row mb-5 offset-2 offset-lg-1 offset-sm-0'>
      <% @games.each do |game| %>
        <div class='card border ml-3 mt-3'>
          <%= link_to game_path(game) do %>
            <%= image_tag game.images[0] ,size: "225x160"%>
          <% end %>
          <%= link_to game_path(game) , class: "text-secondary" do %>
            <%= game.title %>
          <% end %>
          <%= link_to game_path(game) , class: "text-secondary" do %>
            <i class="fas fa-heart" aria-hidden="true" style="color:red;"></i>
            <%= game.favorites.count %> いいね
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center mx-auto">
    <%= paginate @games %>
  </div>
</div>
