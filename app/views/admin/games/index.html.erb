<div class="container mb-5">
  <h2 class="mb-5 mt-5">遊び集<span>（全<%= @games_all_count %>件）</span></h2>
   <div class="d-flex justify-content-end mr-3 mb-3">
        <%= link_to new_admin_game_path do %>
        <div class="border rounded-circle d-flex flex-column" style="height: 40px;width: 40px;">
          <i class="fas fa-plus h4 mb-0 mx-auto my-auto" ></i>
        </div>
        <% end %>
      </div>

    <div class='row px-md-0 ml-2 mt-5'>

       <div class='col-md-9 justify-content-end'>
        <div class='row mb-5'>
          <% @games.each do |game| %>
          <div class='card mx-1 border border-0 mr-3'>
               <%= link_to game_path(game) do %>
                 <%= image_tag game.image ,size: "240x160"%>
               <% end %>

               <%= link_to game_path(game) do %>
                 <%= game.title %>
               <% end %>
               </div>
          <% end %>
        </div>
        <div class="text-center mx-auto">
         <!--%= paginate @contacts %>-->
        </div>
      </div>
    </div>
</div>
