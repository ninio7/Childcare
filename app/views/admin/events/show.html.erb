<div class="container">
  <div class="row mt-5">
    <div class="col-lg-8 offset-lg-2 text-center under">
      <h2>イベント詳細</h2>
    </div>
  </div>
  <p class="col-lg-8 border-top mt-5 offset-lg-2"></p>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-2">
      <strong class="info-title"><i class="far fa-calendar-alt" style="color: gold;"></i> 日付</strong>
    </div>
    <div class="col-lg-4 mt-2 offset-lg-1 offset-3">
      <%= I18n.l(@event.start_time, format: :short) %>
    </div>
  </div>
  <p class="col-lg-8 border-top mt-3 offset-lg-2"></p>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-2">
      <strong class="info-title"><i class="fas fa-book-open" style="color: skyblue;"></i> タイトル</strong>
    </div>
    <div class="col-lg-4 mt-2 offset-lg-1 offset-3">
      <%= @event.title %>
    </div>
  </div>
  <p class="col-lg-8 border-top mt-3 offset-lg-2"></p>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-2">
      <strong class="info-title"><i class="far fa-comment" style="color: lightcoral;"></i> 詳細</strong>
    </div>
    <div class="col-lg-4 mt-3 mb-4 offset-lg-1 offset-3">
      <%=safe_join(@event.content.split("\n"),tag(:br))%>
    </div>
  </div>
  <div class="offset-lg-9 offset-sm-6 mt-5">
    <% if admin_signed_in? %>
      <%= link_to "編集", edit_admin_event_path, class: "btn btn-gray text-white" %>
      <%= link_to "削除", admin_event_path(@event.id), class: "btn btn-outline-danger", method: :delete, "data-confirm" => "本当に削除してよろしいですか?" %></td>
    <% end %>
    <%= link_to "戻る", admin_events_path, class: "btn btn-gray text-white" %>
  </div>
</div>


