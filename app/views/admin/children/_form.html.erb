<div class="row g-3 needs-validation novalidate d-flex justify-content-center">
  <div class="col-lg-8">
    <%= form_with(model: child, url: admin_customer_children_path, local: false, class: 'needs-validation', html: {novalidate: true}) do |f| %>
    <div class="form-group row">
      <%= f.label :"名前" , class: "col-lg-3 col-3"%>
      <%= f.text_field :name, autofocus: true,class:'form-control col-lg-4 col-8', required: true %>
      <div class="invalid-feedback row offset-lg-3 offset-1">
        名前を入力してください。
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"ふりがな", class: "col-lg-3 col-3" %>
      <%= f.text_field :kana_name, autofocus: true, class:'form-control col-lg-4 col-8', required: true %>
        <div class="invalid-feedback row offset-lg-3 offset-1">
         ふりがなを入力してください。
        </div>
    </div>
    <div class="form-group row">
      <%= f.label :"誕生日", class: "col-lg-3 col-3"%>
      <%= f.date_field :birthday, autofocus: true, class:'form-control col-lg-3 col-8', required: true %>
      <div class="invalid-feedback row offset-lg-3 offset-1">
        誕生日を入力してください。
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :group_id,"クラス", class: "col-lg-3 col-3"%>
      <%= f.select :group_id,options_from_collection_for_select(Group.all, :id, :name), {}, {class: "form-control col-lg-3 col-8"}%>
      <div class="invalid-feedback row offset-lg-3 offset-1">
        クラスを選択してください。
        </div>
    </div>
    <div class="col-lg-5 offset-4 offset-xl-5">
      <%= f.submit "新規登録", class: "btn btn-gray text-white rounded-pill col-5 mt-3" %>
    </div>
    <% end %>
  </div>
</div>
