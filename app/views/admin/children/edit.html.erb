<div class="container">
  <h2 class="col-md-7 mt-5 text-center">子ども情報編集</h2>
  <%= form_with(model: @child, url: admin_customer_child_path(@customer, @child),local: true, class: 'needs-validation', html: {novalidate: true}) do |f| %>
  <div class="row g-3 needs-validation novalidate d-flex justify-content-center">
    <div class="col-md-8 mt-5 ">
      <div class="form-group row">
      <%= f.label :"名前" , class: "col-md-3 col-3"%>
      <%= f.text_field :name, autofocus: true,class:'form-control col-md-4 col-8', required: true %>
      <div class="invalid-feedback row offset-md-3 offset-1">
        名前を入力してください。
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"ふりがな", class: "col-md-3 col-3" %>
      <%= f.text_field :kana_name, autofocus: true, class:'form-control col-md-4 col-8', required: true %>
        <div class="invalid-feedback row offset-md-3 offset-1">
         ふりがなを入力してください。
        </div>
    </div>
    <div class="form-group row">
      <%= f.label :"誕生日", class: "col-md-3 col-3"%>
      <%= f.date_field :birthday, autofocus: true, class:'form-control col-md-3 col-8', required: true %>
      <div class="invalid-feedback row offset-md-3 offset-1">
        誕生日を入力してください。
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :group_id,"クラス", class: "col-md-3 col-3"%>
      <%= f.select :group_id,options_from_collection_for_select(Group.all, :id, :name), {}, {class: "form-control col-md-3 col-8"}%>
      <div class="invalid-feedback row offset-md-3 offset-1">
        クラスを選択してください。
      </div>
    </div>
    <div class="col-md-10 text-center">
      <%= f.submit "変更する", class: "btn btn-gray text-white rounded-pill col-md-3 mt-3 col-5" %>
    </div>
  </div>
  <% end %>
</div>