<div class="container">
  <h2 class="col-md-7 my-5 text-center under offset-md-2"><i class="far fa-clipboard"></i> <%= @customer.name %> さんの連絡帳一覧</h2>
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 col-12 text-right">
      <%= link_to new_admin_customer_contact_path do %>
        <p class= "btn btn-yellow text-secondary mr-3"><i class="fas fa-edit" aria-hidden="true"></i> 連絡帳作成</p>
      <% end %>
      <%= link_to admin_customer_absents_path do %>
        <p class= "btn btn-yellow text-secondary"><i class="fas fa-notes-medical" aria-hidden="true"></i> 欠席・遅刻連絡</p>
      <% end %>
    </div>
  </div>
  <%= render "admin/contacts/index", contacts: @contacts %>
  <div class="text-center mx-auto">
    <%= paginate @contacts %>
  </div>
</div>