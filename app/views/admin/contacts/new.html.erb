      <!--  <%#= f.radio_button :weather, "cloudy" %>-->
      <!--  <%#= f.label :weather,"曇り" ,class:"mr-3"%>-->
      <!--  <%#= f.radio_button :weather, "rain" %>-->
      <!--  <%#= f.label :weather,"雨" %>-->
      <!--</div>-->
    </div>
    <div class="needs-validation novalidate">
    <%= render partial: "admin/contacts/form" , locals: { f: f } %>
    </div>
    <div class="row">
      <div class="col-md-2 col-4 offset-2 offset-md-3 mt-3 ">
        <%= f.select :status, Contact.statuses.keys.map { |k| [t("enums.contact.status.#{k}"),k]}, {}, {class: "form-control"} %>
      </div>
      <div class="col-md-5 col-4 mt-3">
        <%= f.submit "登録", class: "btn btn-gray text-white rounded-pill col-md-4" %>
      </div>
    </div>
  <% end %>
</div>

