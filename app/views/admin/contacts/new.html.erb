<div class="container">
  <h2 class="mt-5 col-md-3 offset-md-4 text-center under">連絡帳</h2>
   <%= form_with model: @contact , url: admin_customer_contacts_path, method: :post do |f| %>
    <div class="row mt-5">
      <h4 class="col-md-4 col-7 my-3 offset-md-2"><%= I18n.l(DateTime.now, format: :short) %></h4>
      <div class="col-md-5 col-5 my-3">
        <%= f.select :child_id,options_from_collection_for_select(@customer.children.all, :id, :name) , {}, class: "form-control col-md-5"%>
      </div>
      <!--天気を使用する場合↓-->
      <!--<div class="col-md-3 mt-2">-->
