<div class="container">
  <h2 class="d-flex justify-content-center my-5"><%= @customer.name %> さんの登録情報</h2>
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 p-5 mt-2 my-page-info ">
      <div class="pl-5 pr-5 offset-md-1">
        <table class="table table-sm table-borderless my_info_table">
          <tbody>
            <tr>
              <th style="width: 30%">氏名</th>
              <td><%= @customer.name %></td>
            </tr>
            <tr>
              <th>カナ</th>
              <td><%= @customer.kana_name %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= @customer.phone_number %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
       　　　　　　<th>会員ステータス</th>
       　　　　　　　 <td><%= I18n.t("enums.customer.is_deleted.#{@customer.is_deleted}") %></td>
      　　　　　 </tr>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-4 col-md-3 offset-md-2 offset-0 mt-3 ">
          <%= link_to admin_customer_contacts_path(@customer), class:"btn text-right info_to_edit" do %>
            連絡一覧 <i class="fas fa-clipboard-list"></i>
          <% end %>
        </div>
        <div class="col-4 col-md-3 mt-3">
          <%= link_to admin_customer_children_path(@customer), class:"btn text-right info_to_edit" do %>
           子供情報 <i class="fas fa-child"></i>
          <% end %>
        </div>
        <div class="col-4 col-md-3 mt-3">
          <%= link_to edit_admin_customer_path, class:"btn text-right info_to_edit" do %>
             編集する <i class="fas fa-user-edit"></i>
          <% end %>
        </div>
      </div>
     </div>
   </div>
 </div>


