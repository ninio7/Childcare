<div class="container">
  <h2 class="col-lg-8 mt-5 mb-3 text-center offset-lg-2 under">年間指導計画</h2>
  <%= link_to  new_admin_group_annual_plan_path do %>
    <p class= "btn btn-yellow text-secondary offset-lg-2"><i class="fas fa-edit" aria-hidden="true"></i> 年間指導案作成</p>
  <% end %>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-8 mt-2">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="bg-green text-white" style="width: 20%">年度</th>
            <th class="bg-green text-white">クラス</th>
          </tr>
        </thead>
        <tbody>
          <% @annual_plans.each do |annual_plan| %>
            <tr onclick='window.location="<%= admin_group_annual_plan_path(@group.id,annual_plan.id)  %>"' role="link">
              <td><%= annual_plan.created_at.strftime("%Y年") %></td>
              <td><%= annual_plan.group.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center mx-auto">
    <%= paginate @annual_plans %>
  </div>
</div>
