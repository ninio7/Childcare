 <div class="container">
  <h2 class="col-md-4 offset-md-4 mt-5 text-center under">クラス編集</h2>
  <%= form_with(model: @group,url: admin_group_path , method: :patch, local: true, class: 'needs-validation', html: {novalidate: true}) do |f| %>
    <div class="form-group row mt-5">
      <%= f.label :"クラス名" , class: "col-md-2 offset-md-3 col-3"%>
      <%= f.text_field :name, autofocus: true,class:'form-control col-md-3 col-7' , required: true %>
      <div class="invalid-feedback row offset-md-5 offset-3">
        名前を入力してください。
      </div>
    </div>
    <div class="col-md-10 text-right">
      <%= f.submit "変更", class: "btn btn-gray text-white rounded-pill col-md-2 mt-3 col-3" %>
    </div>
  <% end %>
</div>