<div class= "container">
  <h2 class="mb-5 mt-5">"<%= @group.name %>" 一覧<span>（全<%= @groups_all_count %>件）</span></h2>
<div class="row">
  <div class='col-md-2 mt-5'>
      <%= render "admin/customers/group", groups: @groups %>
  </div>
  <div class="col-md-7 ml-5">
    <table class="table table-hover mt-5">
      <thead>
        <tr>
          <th class="bg-light">園児氏名</th>
          <th class="bg-light">年齢</th>
        </tr>
      </thead>
      <tbody>
      <% @children.each do |child| %>
        <td> <%= link_to new_admin_customer_contact_path(customer_id: child.customer.id) do %><%= child.name %><% end %></td>
        <td><%= child.birthday %></td>
      <% end %>

      </tbody>
    </table>
  </div>
  <div class="col offset-5 text-center">
    <%= paginate @children %>
  </div>
</div>
</div>
