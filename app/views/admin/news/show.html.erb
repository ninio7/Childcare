<div class="container">
  <div class="row mt-5">
    <h2 class="col-lg-8 offset-lg-2 text-center under">お知らせ詳細</h2>
    <div class="col-lg-12 d-flex justify-content-center mt-3">
      <% @news_groups.each do |group| %>
       <p class="bg-light text-secondary rounded-pill mx-2 px-3"><%=group.name %></p>
      <% end %>
    </div>
  </div>
  <p class="col-lg-8 border-top mt-3 offset-lg-2"></p>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-2">
      <strong class="info-title"><i class="fas fa-book-open" style="color: skyblue;"></i> タイトル</strong>
    </div>
    <div class="col-lg-4 mt-2 offset-lg-1 offset-3">
      <%= @news.title %>
    </div>
  </div>
  <p class="col-lg-8 border-top mt-3 offset-lg-2"></p>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-2">
      <strong class="info-title"><i class="far fa-calendar-alt" style="color: gold;"></i> 期間</strong>
    </div>
    <div class="col-lg-4 mt-2 offset-lg-1 offset-3">
      <%= @news.started_on %> ～
      <%= @news.finished_on%>
    </div>
  </div>
  <p class="col-lg-8 border-top mt-3 offset-lg-2"></p>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-2">
      <strong class="info-title"><i class="far fa-comment" style="color: lightcoral;"></i> 詳細</strong>
    </div>
    <div class="col-lg-4 mt-3 mb-4 offset-lg-1 offset-3">
      <%=safe_join(@news.body.split("\n"),tag(:br))%>
    </div>
  </div>
  <div class="col-lg-12 d-flex justify-content-center mt-5">
    <% if admin_signed_in? %>
      <%= link_to "編集", edit_admin_news_path, class: "btn btn-gray text-white mx-2" %>
      <%= link_to "削除", admin_news_path(@news.id), class: "btn btn-outline-danger", method: :delete, "data-confirm" => "本当に削除してよろしいですか?" %></td>
    <% end %>
    <%= link_to "戻る", admin_news_index_path, class: "btn btn-gray text-white mx-2" %>
  </div>
</div>


