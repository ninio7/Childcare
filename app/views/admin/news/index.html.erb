<div class="container mb-5">
  <div class="row d-flex justify-content-center">
    <h2 class="col-md-5 mt-5">お知らせ一覧<span>（全<%= @news.count %>件）</span></h2>
     <div class="col-md-3 mt-5 d-inline-block">
      <%= link_to  new_admin_news_path do %>
        <p class= "btn btn-gray text-white"><i class="fas fa-edit" aria-hidden="true"></i> お知らせ作成</p>
      <% end %>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 mt-5">
      <table class="table table-hover">
        <tbody>
          <% @news.each do |news| %>
          <% date = news.created_at.to_s(:detetime)%>
            <tr>
              <td>
                <%= link_to admin_news_path(news) do %>
                  <p class="text-secondary mt-1 mb-0"><i class="fas fa-square"></i>&emsp;<%= I18n.l(news.created_at, format: :short) %></p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="offset-md-8 offset-sm-6">
    <%= paginate @news %>
  </div>
  </div>

