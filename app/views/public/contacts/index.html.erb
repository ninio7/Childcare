<div class="container mb-5">
  <div class="row">
    <h2 class="col-md-3 mt-5">連絡帳<span>（全<%= @contacts_all_count %>件）</span></h2>
    <div class="col-md-3 mt-5 d-inline-block">
      <%= link_to new_contact_path do %>
        <h4 class="mt-2"> <i class="fa fa-plus-circle" aria-hidden="true"></i> 新規登録</h4>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mt-5">
      <table class="table table-hover">
        <tbody>
          <% @contacts.each do |contact| %>
          <% date = contact.created_at.to_s(:detetime)%>
            <tr>
              <td><% weeks = ["日","月","火","水","木","金","土"]%>
                  <% week = weeks[contact.created_at.wday]%>
                  <% if contact.admin_id? %>
                    <%= link_to admin_customer_contact_path(@customer,contact)  do %>
                      <p class="text-secondary mt-1 mb-0">【 園 】<%=contact.created_at.strftime("%Y年%m月%d日 (#{week})") %></p>
                    <% end %>
                  <% elsif contact.customer_id?%>
                    <%= link_to contact_path(contact) do %>
                      <p class="text-secondary mt-1 mb-0">【家庭】<%=contact.created_at.strftime("%Y年%m月%d日 (#{week})") %></p>
                    <% end %>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
    <div class='row px-md-0 ml-2 mt-5'>
       <div class='col-md-9 justify-content-end'>
        <div class='row mb-5'>
          <% @contacts.each do |contact| %>
          <% date = contact.created_at.to_s(:detetime)%>

            <div class='card mx-1 border border-0 mr-3'>
               <%= link_to contact_path(contact) do %>
                 <!--%= image_tag contact.image ,size: "240x160"%>-->
               <% end %>
               <% weeks = ["日","月","火","水","木","金","土"]%>
               <% week = weeks[contact.created_at.wday]%>
               <% if contact.admin_id? %>
                 <%= link_to admin_customer_contact_path(@customer,contact)  do %>
                   <p class="text-secondary mt-1 mb-0">【園】<%=contact.created_at.strftime("%Y年%m月%d日(#{week})") %></p>
                 <% end %>
               <% elsif contact.customer_id?%>
                <%= link_to contact_path(contact) do %>
                  <p class="text-secondary mt-1 mb-0">【家庭】<%=contact.created_at.strftime("%Y年%m月%d日(#{week})") %></p>
                <% end %>
               <% end %>
             </div>
           <% end %>
        </div>
        <div class="text-center mx-auto">
         <%= paginate @contacts %>
        </div>
      </div>
    </div>
</div>

