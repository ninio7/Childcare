<div class="container mb-5">
  <div class="row d-flex justify-content-center">
    <h2 class="col-md-4 mt-5 text-center">連絡帳</h2>
    <div class="col-md-2 col-5 mt-5 text-right">
      <%= link_to new_contact_path do %>
        <p class= "btn btn-gray text-white"> <i class="fas fa-edit" aria-hidden="true"></i> 連絡帳</p>
      <% end %>
    </div>
    <div class="col-md-3 col-6 mt-5 text-left">
      <%= link_to absents_path do %>
        <p class= "btn btn-gray text-white"> <i class="far fa-clipboard" aria-hidden="true"></i> 欠席・遅刻連絡</p>
      <% end %>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 mt-5 d-flex justify-content-center">
     <table class="table table-hover">
      <tbody>
        <% @contacts.each do |contact| %>
        <% date = contact.created_at.to_s(:detetime)%>
          <tr>
            <td>
              <% weeks = ["日","月","火","水","木","金","土"]%>
              <% week = weeks[contact.created_at.wday]%>
              <% contact_contact = @contact_contacts.where(day: contact.created_at.day).first %>
                <% if contact_contact.present? %>
                  <%= link_to contact_contact_path(contact_contact.id, day: contact.created_at.day)  do %>
                    <p class="text-secondary mt-1 mb-0">■ <%=contact.created_at.strftime("%Y年%m月%d日 (#{week})") %></p>
                  <% end %>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>
  </div>
  <div class="offset-md-8 offset-sm-6">
    <%= paginate @contacts %>
  </div>
</div>

