<div class="container">
  <h2 class="mt-5 mb-3 col-md-3 offset-md-4 text-center under">連絡帳</h2>
  <%= form_with model: @contact , url: contacts_path, method: :post do |f| %>
  <h4 class="col-md-6 mt-3"><%= I18n.l(DateTime.now, format: :short) %></h4>
  <div class="row my-3">
    <div class="col-md-6 col-9">
      <%= f.select :child_id,options_from_collection_for_select(@customer.children.all, :id, :name) , {}, class: "form-control col-md-5"%>
    </div>
  </div>
  <p class="border-top"></p>
  <div class="field form-group row">
    <div class="col-md-1">
      <strong class="info-title"><i class="fas fa-utensils" style="color: coral;"></i> 食事</strong>
    </div>
    <p class="col-md-2 mt-3 offset-md-1">前日夕食</p>
    <div class="col-md-4 col-12 offset-1 offset-md-0 mt-3">
      <%= f.text_area :dinner, placeholder: "内容",autofocus: true, size: "35x3"%>
    </div>
    <div class="col-md-4 col-12 offset-1 offset-md-0">
      <%= f.select :dinner_quantity,Contact.dinner_quantities.keys.map{|k| [I18n.t("enums.contact.dinner_quantity.#{k}"),k]}, {}, class: "form-control col-md-6 mt-3 col-6" %>
      <%= f.time_field :dinner_time, autofocus: true ,class: "mt-3", required: true%>
    </div>
  </div>
  <div class="field form-group row">
    <p class="col-md-2 mt-3 offset-md-2">朝食</p>
    <div class="col-md-4 col-12 offset-1 offset-md-0 mt-3">
      <%= f.text_area :breakfast, placeholder: "内容",autofocus: true, size: "35x3"%>
    </div>
    <div class="col-md-4 col-12 offset-1 offset-md-0">
      <%= f.select :breakfast_quantity,Contact.breakfast_quantities.keys.map{|k| [I18n.t("enums.contact.breakfast_quantity.#{k}"),k]}, {}, class: "form-control col-md-6 col-6 mt-3" %>
      <%= f.time_field :breakfast_time, autofocus: true ,class: "mt-3", required: true%>
    </div>
  </div>
  <p class="col border-top"></p>
  <strong class="info-title"><i class="far fa-smile" style="color: orange;"></i> 機嫌</strong>
  <div class="field form-group row ml-4">
    <div class="btn-group btn-group-toggle offset-3 offset-md-4" data-toggle="buttons">
    <label class="btn btn-yellow active text-white pb-0">
      <%= f.radio_button :humor, 0, {checked: true} %><strong><i class="far fa-laugh-beam" style="color: orang; font-size: 2em;"></i></strong><br>良い
    </label>
    <label class="btn btn-green active text-white">
       <%= f.radio_button :humor, 1, {} %><strong><i class="far fa-smile" style="color: orang; font-size: 2em;"></i></strong><br>普通
    </label>
    <label class="btn btn-gray active text-white">
      <%= f.radio_button :humor, 2, {} %><strong><i class="far fa-tired" style="color: blu; font-size: 2em;"></i></strong><br>悪い
    </label>
    </div>
  </div>
  <p class="col border-top"></p>
  <strong class="info-title"><i class="fas fa-bed" style="color: cadetblue;"></i> 睡眠</strong>
  <div class="field form-group row">
    <div class="col-md-3 col-8 mt-3 offset-4">
      <%= f.time_field :sleep_started_at, autofocus: true, required: true %> ～
      <%= f.time_field :sleep_finished_at, autofocus: true ,class: "mr-2", required: true%>
    </div>
    <div class="col-md-2 col-6 mt-3 offset-md-0 offset-4 ">
      <%= f.select :sleep_degree,Contact.sleep_degrees.keys.map{|k| [I18n.t("enums.contact.sleep_degree.#{k}"),k]} , {}, class: "form-control" %>
    </div>
  </div>
  <p class="col border-top"></p>
  <strong class="info-title"><i class="fas fa-thermometer" style="color: darkseagreen;"></i> 検温</strong>
  <div class="field form-group row">
    <div class="col-md-3 mt-3 offset-4">
     <%= f.text_field :temperture, placeholder: "温度", autofocus: true , size: "2x5"%>  ℃
     <%= f.time_field :tempertured_at, autofocus: true , class:"ml-3", required: true%>
    </div>
  </div>
  <p class="border-top"></p>
  <strong class="info-title"><i class="fas fa-poo" style="color: peru;"></i> 排便</strong>
  <div class="field form-group row">
    <div class="col-5 col-md-2 offset-4 offset-md-4">
      <%= f.select :defecation,Contact.defecations.keys.map{|k| [I18n.t("enums.contact.defecation.#{k}"),k]} , {}, class: "form-control " %>
    </div>
    <div class="col-xs-3 mt-1">
      <%= f.text_field :defecation_number, autofocus: true , placeholder: "回数", size: "1x1"%>
    </div>
  </div>
  <p class="col border-top"></p>
  <strong class="info-title"><i class="fas fa-user" style="color: skyblue;"></i> お迎え</strong>
  <div class="field form-group row">
    <div class="col-md-2 col-10 mt-3 offset-4">
      <%= f.text_field :pickup_person, placeholder: "お迎えに来る人", autofocus: true%>
      </div>
      <div class="col-md-3 col-6 offset-4 mt-3 ">
      <%= f.time_field :pickuped_at, autofocus: true ,  required: true%>
     </div>
  </div>
  <p class="col border-top"></p>
  <strong class="info-title"><i class="far fa-comment" style="color: lightcoral;"></i> コメント</strong>
  <div class="field form-group row">
    <div class="col-md-10 mt-3 d-flex justify-content-center">
      <%= f.text_area :comment, autofocus: true, size: "70x5" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 text-center">
     <%= f.submit "登録", class: "btn btn-gray text-white rounded-pill mt-5 col-md-2 col-4 offset-md-1" %>
     </div>
  </div>
　<% end %>
</div>

