<div class="container">
  <h2 class="my-5 col-md-10 text-center">連絡帳</h2>
  <%= form_with model: @contact , url: contacts_path, method: :post do |f| %>
  <div class="row mt-5 mb-5 offset-1">
    <h3 class="col-md-5"><%= @date %> (<%=@weekday %>)</h3>
    <div class="col-md-3 mt-2">
      <%= f.select :child_id,options_from_collection_for_select(@customer.children.all, :id, :name) , {}, {class: "form-control"}%>
    </div>
  </div>
  <p class="border-top"></p>
  <div class="field form-group row">
    <div class="col-md-1">
      <i class="fas fa-utensils"></i> 食事
    </div>
    <p class="col-md-1 mt-3">前日夕食</p>
    <div class="col-md-4 mt-3">
      <%= f.text_area :dinner, placeholder: "内容",autofocus: true, size: "30x3"%>
    </div>
    <div class="col-md-4 mt-4">
      <%= f.select :dinner_quantity,Contact.dinner_quantities.keys.map{|k| [I18n.t("enums.contact.dinner_quantity.#{k}"),k]} %>
      <%= f.time_field :dinner_time, autofocus: true ,class: "ml-3"%>
    </div>
  </div>
  <div class="field form-group row">
    <div class="col-md-1"></div>
    <p class="col-md-1 mt-3">朝食</p>
    <div class="col-md-4 mt-3">
      <%= f.text_area :breakfast, placeholder: "内容",autofocus: true, size: "30x3"%>
    </div>
    <div class="col-md-4 mt-4">
      <%= f.select :breakfast_quantity,Contact.breakfast_quantities.keys.map{|k| [I18n.t("enums.contact.breakfast_quantity.#{k}"),k]} %>
      <%= f.time_field :breakfast_time, autofocus: true ,class: "ml-3"%>
    </div>
  </div>
  <p class="col border-top"></p>
  <i class="far fa-smile"></i> 機嫌
  <div class="field form-group row">
    <div class="col-md-6 mt-3 offset-2">
      <!--</%= f.select :humor,Contact.humors.keys.map{|k| [I18n.t("enums.contact.humor.#{k}"),k]} %>-->
      <%= f.radio_button :humor, "good" %>
      <%= f.label :humor,"良い" ,class:"mr-3"%>
      <%= f.radio_button :humor, "usually" %>
      <%= f.label :humor,"普通" ,class:"mr-3"%>
      <%= f.radio_button :humor, "bad" %>
      <%= f.label :humor,"悪い" %>
    </div>
  </div>
  <p class="col border-top"></p>
  <i class="fas fa-bed"></i> 睡眠
  <div class="field form-group row">
   <div class="col-md-5 mt-3 offset-2">
    <%= f.time_field :sleep_started_at, autofocus: true %> ～
      <%= f.time_field :sleep_finished_at, autofocus: true ,class: "mr-2"%>
      <%= f.select :sleep_degree,Contact.sleep_degrees.keys.map{|k| [I18n.t("enums.contact.sleep_degree.#{k}"),k]} %>
    </div>
   </div>
   <p class="col border-top"></p>
  <i class="fas fa-thermometer"></i> 検温
  <div class="field form-group row">
    <div class="col-md-3 mt-3 offset-2">
     <%= f.text_field :temperture, placeholder: "温度", autofocus: true , size: "2x5"%>  ℃
     <%= f.time_field :tempertured_at, autofocus: true , class:"ml-3"%>
    </div>
  </div>
  <p class="col border-top"></p>
  <i class="fas fa-poo"></i> 排便
  <div class="field form-group row">
    <div class="col-md-3 mt-3 offset-2">
      <%= f.select :defecation,Contact.defecations.keys.map{|k| [I18n.t("enums.contact.defecation.#{k}"),k]} %>
      <%= f.text_field :defecation_number, autofocus: true , placeholder: "回数", size: "4x5", class:"ml-4"%> 回
    </div>
  </div>
  <p class="col border-top"></p>
  <i class="fas fa-user"></i> お迎え
  <div class="field form-group row">
    <div class="col-md-5 mt-3 offset-2">
      <%= f.text_field :pickup_person, placeholder: "お迎えの人", autofocus: true %>
      <%= f.time_field :pickuped_at, autofocus: true , class:"ml-3"%>
     </div>
  </div>
  <p class="col border-top"></p>
  <i class="far fa-comment"></i> コメント
  <div class="field form-group row">
    <div class="col-md-10 mt-3 d-flex justify-content-center">
      <%= f.text_area :comment, autofocus: true, size: "70x5" %>
    </div>
  </div>
  <div class="row offset-7">
     <%= f.submit "登録", class: "btn btn-gray text-white rounded-pill mt-5 col-md-3" %>
  </div>
　<% end %>
</div>

