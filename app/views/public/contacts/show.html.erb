<div class="container">
  <h2 class="border-bottom mt-3 col-md-5 text-center">家庭からの連絡帳</h2>
  <div class="row">
    <div class="col-md-5">
      <h3 class="mt-4"><%= @date %> (<%=@weekday %>)</h3>
    </div>
    <div class="col-md-5 mt-4">
      <h3><%= @contact.child.name %> さん</h3>
    </div>
  </div>
  <p class="mt-3">食事</p>
  <div class="field form-group row">
    <p class="col-md-2">前日の夜</p>
    <div class="col-md-3">
      <%= @contact.dinner %>
    </div>
    <div class="col-md-3 ">
      <%= @contact.quantity_i18n %>
      <%= @contact.dinner_time.strftime('%H:%M')%>
    </div>
  </div>
  <div class="field form-group row">
    <p class="col-md-2">朝食</p>
    <div class="col-md-3">
     <%= @contact.breakfast%>
    </div>
    <div class="col-md-3">
     <%= @contact.quantity_i18n %>
     <%= @contact.breakfast_time.strftime('%H:%M')%>
    </div>
   </div>
   <div class="field form-group row">
    <p class="col-md-2">機嫌</p>
    <div class="col-md-3">
      <%= @contact.humor_i18n %>
    </div>
   </div>
   <div class="field form-group row">
    <p class="col-md-2">睡眠</p>
    <div class="col-md-3">
     <%= @contact.sleep_time.strftime('%H:%M') %> ～
     <%= @contact.sleep_time.strftime('%H:%M')%>
    </div>
    <div class="col-md-3">
      <%= @contact.sleep_degree_i18n %>
    </div>
   </div>
   <div class="field form-group row">
    <p class="col-md-2">検温</p>
    <div class="col-md-3">
     <%= @contact.temperture%>  ℃
    </div>
    <div class="col-md-3">
      <%= @contact.temperture_time.strftime('%H:%M')%>
    </div>
   </div>
   <div class="field form-group row">
    <p class="col-md-2">お迎え</p>
    <div class="col-md-3">
     <%= @contact.pickup_person %>
    </div>
    <div class="col-md-3">
     <%= @contact.pickup_time.strftime('%H:%M')%>
    </div>
   </div>
   <div class="field form-group row">
    <p class="col-md-2">コメント</p>
    <div class="col-md-5">
     <%= @contact.comment %>
    </div>
   </div>
</div>
