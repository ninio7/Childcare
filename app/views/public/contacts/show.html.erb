<div class="container">
  <h2 class="mt-5 mb-3 col-lg-7 offset-lg-2 text-center under">連絡帳</h2>
  <div class="row my-4">
    <div class="col-lg-4 col-12 offset-lg-2 text-center">
      <h4><%=I18n.l(@contacts.first.created_at, format: :short)%></h4>
    </div>
    <div class="col-lg-3 col-12 text-center">
      <h4><%= @child.name%> さん</h4>
    </div>

  </div>
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">園から</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false"> 家庭から</a>
    </li>
  </ul>

  <div class="tab-content" id="myTabContent">
    <!--園からの連絡帳-->
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
     <%= render "admin", contact: @contacts.where.not(admin_id: nil).first if @contacts.where.not(admin_id: nil).any? %>
    </div>
　  <!--家庭からの連絡帳-->
　  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
　    <%#= @contacts.inspect %>
　     <%= render "customer", contact: @contacts.where(admin_id: nil).first if @contacts.where(admin_id: nil).any? %>
    </div>
  </div>
</div>
