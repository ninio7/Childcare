<div class="container">
　<div><%= flash[:info_edit_success] %></div>
　  <div class="row">
    <div class="col-md-6 offset-1">
      <div class="row">
        <div class="col-md-4"><%= image_tag 'cat.png',style: "background-size: cover;", size: "200x150" ,class: "carousel_image " %></div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 p-5 my-page-info offset-1">
      <div class="row">
        <div class="col-md-3 ml-5">
          <strong class="info-title">登録情報</strong>
        </div>
        <div class="col-md-9 offset-3 text-right">
          <%= link_to edit_customer_path, class:"btn text-right info_to_edit" do %>
            編集する<i class="fas fa-user-edit"></i>
          <% end %>
        </div>
        </div>
        <div class="mt-3 pl-5 pr-5 ">
          <table class="table table-sm table-borderless my_info_table">
            <tbody>
              <tr>
                <th style="width: 30%">氏名</th>
                <td><%= @customer.name %></td>
              </tr>
              <tr>
                <th>カナ</th>
                <td><%= @customer.kana_name %></td>
              </tr>
              <tr>
                <th>郵便番号</th>
                <td><%= @customer.postal_code %></td>
              </tr>
              <tr>
                <th>住所</th>
                <td><%= @customer.address %></td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td><%= @customer.phone_number %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= @customer.email %></td>
              </tr>
            </tbody>
          </table>
      　</div>
     </div>
    </div>

    <div class="row">
    <div class="col-md-9 p-5 ml-5">
      <div class="row">
        <div class="col-md-3 ml-3">
          <strong class="info-title">お子様情報</strong>
        </div>

        </div>
        <div class="mt-3 pl-5 pr-5 ">
          <!--<table class="table table-sm table-borderless my_info_table">-->
          <table class="table table-bordered my_info_table">
         <thead class="">
           <tr class="">
             <th>名前</th>
             <th>ふりがな</th>
             <th>誕生日</th>
             <th>年齢</th>
             <th>クラス</th>
           </tr>
         </thead>
        <tbody>
        <% @children.each do |child| %>
           <tr>
             <td><%= child.name %></td>
             <td><%= child.kana_name %></td>
             <td><%= child.birthday %></td>
             <td><%= (Date.today.strftime("%Y%m%d").to_i - child.birthday.strftime("%Y%m%d").to_i) / 10000  %> 歳
               <%= ((Date.today.strftime("%Y%m%d").to_i - child.birthday.strftime("%Y%m%d").to_i) /100 ).to_s.split("")[-1] %> カ月
             </td>
             <td><%= child.group.name %> </td>
           </tr>
        <% end %>
        </tbody>
      </table>
      　</div>
     </div>
    </div>



