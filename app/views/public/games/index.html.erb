<div class="container">
  <div class="row mt-5 offset-lg-1">
    <div class="col-lg-4">
      <h2 class="under text-center">遊び集<span>（全<%= @games_all_count %>件）</span></h2>
      <% if customer_signed_in? %>
        <%= link_to favorites_path do %>
         <p class="btn btn-danger text-white rounded-pill mt-3"><i class="far fa-heart"></i></p>
        <% end %>
      <% end %>
    </div>
    <div class="col mb-5">
      <%= render 'layouts/sort_game', link: games_path, sort_games: @sort_games  %>
    </div>
  </div>
  <div class='row'>
    <div class='row mb-5 offset-2 offset-lg-1 offset-sm-0'>
      <% @games.each do |game| %>
        <div class='card border ml-3 mt-3'>
          <%= link_to game_path(game) do %>
            <%= image_tag game.images[0] ,size: "225x160"%>
          <% end %>
          <%= link_to game_path(game) , class: "text-secondary" do  %>
            <%= game.title %>
          <% end %>
          <span id= "game_<%= game.id %>">
            <%= render "public/favorites/btn", game: game%>
          </span>
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center mx-auto">
    <%= paginate @pages %>
  </div>
</div>
