<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5">
      <h2 class="under text-center">遊び集<span>（全<%= @games.count %>件）</span></h2>
      <% if customer_signed_in? %>
        <%= link_to favorites_path do %>
         <p class="btn btn-danger text-white rounded-pill mt-3"><i class="far fa-heart"></i></p>
        <% end %>
      <% end %>
    </div>
    <div class="col mb-5 mt-4">
      <%= render 'layouts/sort_game', link: games_path, sort_games: @sort_games  %>
    </div>
  </div>
  <div class='row'>
    <div class='col d-flex justify-content-start offset-2 offset-md-0'>
      <div class='row mb-5'>
        <% @games.each do |game| %>
        <div class='card border mr-3 mt-3'>
          <%= link_to game_path(game) do %>
            <%= image_tag game.images[0] ,size: "240x160"%>
           <% end %>
          <%= link_to game_path(game) , class:"text-secondary" do  %>
            <%= game.title %>
          <% end %>
          <span id = "game_<%= game.id %>">
           <%= render "public/favorites/btn" , game: game%>
          </span>
        </div>
        <% end %>
      </div>
    </div>
    <div class="text-center mx-auto">
      <%= paginate @pages %>
    </div>
  </div>
</div>
