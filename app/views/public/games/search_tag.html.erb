<div class="container">
  <div class="row">
    <% if params[:title].present? %>
      <div class="col-md-5 mt-5 text-center offset-md-1">
        <h2 class="mb-5 mt-5 under">"<%= @game_title %>" 検索結果</h2>
      </div>
    <% elsif params[:tag_id].present?%>
    <div class="col-md-5 mt-5 text-center offset-md-1">
      <h2 class="mb-5 mt-5 under">"<%= @tag.name %>"検索結果一覧<span>（全<%= @games.size %>件）</span></h2>
    </div>
    <% end %>
    <div class="col text-right mb-5 mt-4">
      <%= render 'layouts/sort_game', link: games_path %>
    </div>
  </div>
  <div class='row'>
    <div class='col d-flex justify-content offset-1 offset-md-0'>
      <div class='row mb-5'>
        <% @games.each do |game| %>
        <div class='card border mx-3 my-3'>
          <%= link_to game_path(game) do %>
            <%= image_tag game.images[0] ,size: "240x160"%>
          <% end %>
          <%= link_to game_path(game) , class:"text-secondary" do %>
            <%= game.title %>
          <% end %>
          <span id = "game_<%= game.id %>">
           <%= render "public/favorites/btn" , game: game%>
          </span>

        <!--一覧にタグを載せたい場合↓-->
        <!--  <div class="row">-->
        <!--    <%# @tag_list.each do |list|%>-->
        <!--      <div>-->
        <!--        <%#=link_to search_tag_path(tag_id: list.id) do %><p class="btn btn-gray text-white rounded-pill ml-3 mt-2 px-1 py-0">#<%#= list.name %></p><%# end %>-->
        <!--      </div>-->
        <!--    <%# end %>-->
        <!--  </div>-->
        </div>
        <% end %>
      </div>
      <div class="text-center mx-auto">
        <%= paginate @games %>
      </div>
    </div>
  </div>
</div>
