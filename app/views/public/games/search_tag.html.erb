<div class="container">
  <div class="row">
  <% if params[:title].present? %>
    <div class="col-lg-7 mt-5 text-center offset-lg-3">
      <h2 class="mb-5 mt-5 under">"<%= @game_title %>" 検索結果<span>（全<%= @games_all_count %>件）</span></h2>
    </div>
  <% elsif params[:tag_id].present?%>
    <div class="col-lg-7 mt-5 text-center offset-lg-3">
      <h2 class="mb-5 mt-5 under">"<%= @tag.name %>"検索結果<span>（全<%= @games_all_count %>件）</span></h2>
    </div>
  <% end %>
  </div>
  <div class='row'>
    <div class='row mb-5 offset-2 offset-lg-1 offset-sm-0'>
      <% @games.each do |game| %>
        <div class='card border ml-3 mt-3'>
          <%= link_to game_path(game) do %>
            <%= image_tag game.images[0] ,size: "225x160"%>
          <% end %>
          <%= link_to game_path(game) , class: "text-secondary" do %>
            <%= game.title %>
          <% end %>
          <span id= "game_<%= game.id %>">
           <%= render "public/favorites/btn" , game: game%>
          </span>
        <!--一覧にタグを載せたい場合-->
        <!--  <div class="row">-->
        <!--    <%# @tag_list.each do |list|%>-->
        <!--      <div>-->
        <!--        <%#=link_to search_tag_path(tag_id: list.id) do %><p class="btn btn-gray text-white rounded-pill ml-3 mt-2 px-1 py-0">#<%#= list.name %></p><%# end %>-->
        <!--      </div>-->
        <!--    <%# end %>-->
        <!--  </div>-->
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center mx-auto">
      <%= paginate @games %>
  </div>
</div>
