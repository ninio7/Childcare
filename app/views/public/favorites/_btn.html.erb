<% if customer_signed_in? %>
  <% if game.favorited_by?(current_customer) %>
    <%= link_to game_favorites_path(game), method: :delete, remote: true , class:"text-secondary" do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= game.favorites.count %> いいね
    <% end %>
  <% else %>
    <%= link_to game_favorites_path(game), method: :post, remote: true , class:"text-secondary" do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= game.favorites.count %> いいね
    <% end %>
  <% end %>
<% else %>
