<div class="container">
  <h2 class="col-md-4 offset-md-3 text-center my-5 under">新規会員登録</h2>
  <% if admin_signed_in? %>
    <%= form_with(model: @customer, url: customer_registration_path, local: true, class: 'needs-validation', html: {novalidate: true}) do |f| %>
    <div class="col g-3 needs-validation novalidate">
      <div class="field form-group row offset-md-2">
        <%= f.label :"氏名" , class: "col-md-4"%>
        <%= f.text_field :name,placeholder: "山田 太郎",autofocus: true, class: 'form-control col-md-3 ', required: true %>
        <div class="invalid-feedback row offset-1 offset-md-4">
          氏名を入力してください。
        </div>
      </div>

      <div class="field form-group row offset-md-2">
        <%= f.label :"ふりがな" , class: "col-md-4 "%>
        <%= f.text_field :kana_name,placeholder: "やまだ たろう" ,autofocus: true, class: 'form-control col-md-3 ', required: true %>
        <div class="invalid-feedback row offset-1 offset-md-4">
          ふりがなを入力してください。
        </div>
      </div>

      <div class="field form-group row offset-md-2">
        <%= f.label :"メールアドレス", class: "col-md-4 " %>
        <%= f.text_field :email, autofocus: true,placeholder: "samplie@example.com" ,autocomplete: "email" ,　autofocus: true, class: 'form-control col-md-3 ', required: true %>
        <div class="invalid-feedback row offset-1 offset-md-4">
          メールアドレスを入力してください。
        </div>
      </div>
      <div class="field form-group row offset-md-2">
        <%= f.label :"郵便番号（ハイフンなし）", class: "col-md-4 " %>
        <%= f.text_field :postal_code,placeholder: "0000000",autofocus: true, class: 'form-control col-md-3 ', required: true %>
        <div class="invalid-feedback row offset-1 offset-md-4">
          郵便番号を入力してください。
        </div>
      </div>

      <div class="field form-group row offset-md-2">
        <%= f.label :"住所", class: "col-md-4" %>
        <%= f.text_field :address,placeholder: "東京都渋谷区代々木神園町0-0",autofocus: true, class: 'form-control col-md-7', required: true %>
        <div class="invalid-feedback row offset-1 offset-md-4">
          住所を入力してください。
        </div>
      </div>

      <div class="field form-group row offset-md-2">
        <%= f.label :"電話番号（ハイフンなし）" , class: "col-md-4 " %>
        <%= f.text_field :phone_number,placeholder: "00000000000",autofocus: true, class: 'form-control col-md-3 ', required: true %>
         <div class="invalid-feedback row offset-1 offset-md-4">
          電話番号を入力してください。
         </div>
      </div>

      <div class="field form-group row offset-md-2">
        <div class="col-md-4">
          <%= f.label :"パスワード"  %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
         <%= f.password_field :password, autocomplete: "new-password",autofocus: true, class: 'form-control col-md-3 ', required: true %>
          <div class="invalid-feedback row offset-1 offset-md-4">
            パスワードを入力してください。
          </div>
      </div>

      <div class="field form-group row offset-md-2">
        <%= f.label :"パスワード（確認用）", class: "col-md-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,autofocus: true, class: 'form-control col-md-3 ', required: true %>
        <div class="invalid-feedback row offset-1 offset-md-4">
          パスワード（確認用）を入力してください。
        </div>
      </div>
    </div>
    <div class="col-md-9 text-center">
      <%= f.submit "新規登録", class: "btn btn-gray col-md-3 col-6 rounded-pill  text-white offset-md-2 mt-5 " %>
    </div>
    <% end %>
  <% end %>
</div>
