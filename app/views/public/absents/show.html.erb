<div class="container">
  <h2 class="border-bottom mt-3 col-md-5 text-center">欠席・遅刻連絡</h2>


    <div class="form-group row">
     <h3><%= @absent.child.name %> さん</h3>
    </div>
    <div class="form-group row">
     <h3><%= @absent.created_at.strftime('%Y年 %m月 %d日') %></h3>
    </div>

    <div class="field form-group row">
      <p class="col-md-1">種別</p>
      <div class="col-md-4">
         <%= @absent.kind_i18n %>
      </div>
    </div>

    <div class="field form-group row">
     <p class="col-md-1">期間</p>
     <div class="col-md-4">
        <%= @absent.started_on %> ～
        <%= @absent.finished_on%>
     </div>
    </div>
     <div class="field form-group row">
     <p class="col-md-1">症状</p>
      <div class="col-md-3">
      <%= @absent.symptom %>
      </div>
    </div>
    <div class="field form-group row">
     <p class="col-md-1">備考</p>
      <div class="col-md-5">
       <%= @absent.note %>
        </div>

    </div>

</div>


