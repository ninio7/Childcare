<div class="container">
  <h2 class="my-5 col-md-10 text-center">欠席・遅刻連絡</h2>
  <div class="row d-flex justify-content-center">
    <div class="col-md-4 mt-3">
      <% weeks = ["日","月","火","水","木","金","土"]%>
      <% week = weeks[@absent.created_at.wday]%>
      <h3><%= @absent.created_at.strftime("%Y年%m月%d日 (#{week})") %></h3>
    </div>
    <div class="col-md-4 mt-3">
      <h3><%= @absent.child.name %> さん</h3>
    </div>
  </div>
  <p class="col-md-10 border-top mt-5"></p>
  <div class="row d-flex justify-content-center">
    <div class="col-md-1">
      <i class="far fa-check-circle"></i> 種別
    </div>
    <div class="col-md-4 mt-3 mb-4 offset-2">
      <%= @absent.kind_i18n %>
    </div>
  </div>
  <p class="col-md-10 border-top"></p>
  <div class="row d-flex justify-content-center">
    <div class="col-md-1">
      <i class="far fa-calendar-alt"></i> 期間
    </div>
    <div class="col-md-4 mt-3 mb-4 offset-2">
      <%= @absent.started_on %> ～
      <%= @absent.finished_on%>
    </div>
  </div>
  <p class="col-md-10 border-top"></p>
  <div class="row d-flex justify-content-center">
    <div class="col-md-1">
     <i class="fas fa-notes-medical"></i> 症状
    </div>
    <div class="col-md-4 mt-3 mb-4 offset-2">
     <%= @absent.symptom %>
    </div>
  </div>
  <p class="col-md-10 border-top"></p>
  <div class="row d-flex justify-content-center">
    <div class="col-md-1">
      <i class="far fa-comment"></i> 備考
    </div>
    <div class="col-md-4 mt-3 mb-4 offset-2">
      <%= @absent.note %>
    </div>
  </div>
</div>


